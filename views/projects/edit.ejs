<%layout('./layout/boilerplate')%>
<!-- <div class="row"> -->
<h1 class="text-center">New Project</h1>
<div class="col-4 offset-4">
    <form action="/edit/<%=project._id %>" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" for="Name">Name</label>
            <input class="form-control"type="text" id="Name" name="project[name]" value="<%=project.name %>" required>
       </div>
       <div class="mb-3">
            <label class="form-label" for="Github">Github Link</label>
            <input class="form-control" type="text" id="Github" name="project[Github]" value="<%=project.Github %>" min="0">
       </div>
       <div class="mb-3">
          <label class="form-label" for="location">Completed: &nbsp;</label>
          <!-- <div> -->
          <label> <input type="radio" name="project[iscompleted]"  value='true'> Yes </label> 
          <label> <input type="radio" name="project[iscompleted]"  value='false'> No </label> 
        <!-- </div> -->
       </div>
       <div class="mb-3">
           <label class="form-label" for="Image">Upload Image(jpg, jpeg, png format only)</label>
           <!-- <input class="form-control"type="text" id="image" name="Camp[image]" required> -->
           <input type="file" name="image" >
       </div>
       <div class="mb-3">
        <label class="form-label" for="description">Desciption</label>
        <input class="form-control"type="text" id="description" name="project[description]" value="<%=project.description %>">
       </div>

        <button class="btn btn-success offset-5" >Submit</button>
    </form>
</div>
<!-- </div> -->
